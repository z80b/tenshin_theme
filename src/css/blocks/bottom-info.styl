.lp-bottom
    background inline-image('news-block-bg.png') repeat
    border-top solid 1px #fff
    color #fff
    text-align justify
    padding 10px 0
    
    &__info
        width 926px
        margin 0 auto
        font-size 0
        
    .lp-info
        display table
        table-layout fixed
        
        &__left-side, &__right-side
            display table-cell
            font 11px/1.5 Arial
            vertical-align top
            
        &__left-side
            padding 0 10px 0 0
            
        &__right-side
            padding 0 0 0 10px
            border-left solid 1px #fff
            
        .button
            @extends $red-button
            width 120px
            margin 12px 0 0