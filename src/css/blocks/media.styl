.lp-media
    
    &__controls
        clearfix()
        padding 10px 0
        margin 0 0 24px
        
    &__button
        @extend $red-button
        float left
        width 120px
        margin 0 10px 0 0

    &__content
        display flex
        flex-wrap wrap
        justify-content center
        margin 0 -24px 0 0

        .lp-videos__slide
            width 203px
            margin 0 24px 24px 0
            padding 0
            text-decoration none

        .lp-videos__image
            width 100%
            height 152px

    &__item
        display block
        width 203px
        margin 0 24px 24px 0
        text-decoration none

    &__image
        display block
        width 100%

    &__title
        display block
        text-align center
        font-size 20px
        color #a52a2a
        margin 10px 0

    &__group-title
        display block
        text-align center
        font-size 24px
        color #a52a2a
        margin 20px 0

    &__footer
        display flex
        justify-content center
        padding 24px 0