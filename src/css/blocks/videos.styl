.lp-videos
    display block
    bg 'images/video-block-bg.png' top left repeat
    height 152px
    
    &__inner
        relative width 926px
        margin 0 auto
        
    &__button
        @extends $red-button
        absolute width 26px height 152px top 0
        outline none
        opacity 1
        cursor pointer
        
        &--left
            left 0
            icon-arrow left 16px #fff 3px
            
        &--right
            right 0
            icon-arrow right 16px #fff 3px
            
    &__slider
        absolute left 26px width 874px height 152px
        overflow hidden
        
    &__image
        display block
        width 154px
        height 110px
        background-size auto 135%
        background-position 50% 50%
        
        &-wrapper
            display block
            position relative
            
            &::before, &::after
                content ''
                display block
                transition .5s opacity ease
            
            &::before
                absolute top 0 left 0 width 100% height 100%
                background-color rgba(#000, .6)
                opacity 0
            
            &::after
                absolute top 50% left 50% width 42px height 42px
                background inline-image('play-button.png') 50% 50% no-repeat
                margin -21px 0 0 -21px
                opacity .6
                
    &__slide
        
        display block
        box-sizing border-box
        padding 21px 10px
        float left
        width 174px
        height 152px
        
        &:hover
            .lp-videos__image-wrapper
                &::before, &::after
                    opacity 1
        
    .slick-list, .slick-track
        height 154px
        z-index 1